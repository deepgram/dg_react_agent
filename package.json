{
  "name": "deepgram-tts-react",
  "version": "0.1.0",
  "description": "A React hook for real-time text-to-speech using Deepgram's TTS API with intelligent text chunking and queue management",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "deepgram",
    "tts",
    "text-to-speech",
    "react",
    "nextjs",
    "audio",
    "speech",
    "ai",
    "real-time",
    "websocket",
    "typescript",
    "streaming",
    "chunking"
  ],
  "author": "Deepgram",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deepgram/deepgram-tts-react"
  },
  "bugs": {
    "url": "https://github.com/deepgram/deepgram-tts-react/issues"
  },
  "homepage": "https://github.com/deepgram/deepgram-tts-react#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^8.3.2",
    "@rollup/plugin-url": "^8.0.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "rollup": "^2.75.6",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
